<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GameCenter" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#bcaaa4</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Game2048" parent="Theme.GameCenter">
        <item name="colorPrimary">#bcaaa4</item>
        <item name="colorPrimaryVariant">#efdcd5</item>
        <item name="colorOnPrimary">#8c7b75</item>
    </style>
    <style name="Theme.GameCenter.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.GameCenter.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.GameCenter.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>